{
    "$id": "https://vng.brp.nl/schemas/brp.naam.schema.json",
    "$schema": "https://docs.commongateway.nl/schemas/Entity.schema.json",
    "version": "0.1.0",
    "title": "Naam",
    "type": "object",
    "properties": {
        "id": {
            "type": "integer",
            "format": "uuid",
            "nullable": true
        },
        "geslachtsnaam": {
            "type": "string",
            "example": "Vries",
            "description": "De achternaam van een persoon."
        },
        "voorletters": {
            "type": "string",
            "example": "P.J.",
            "description": "De voorletters van de persoon, afgeleid van de voornamen."
        },
        "voornamen": {
            "type": "string",
            "example": "Pieter Jan",
            "description": "De verzameling namen voor de geslachtsnaam, gescheiden door spaties."
        },
        "voorvoegsel": {
            "type": "string",
            "example": "de",
            "description": "De achternaam van een persoon."
        },
        "adellijkeTitelPredikaat": {
            "$ref": "https://vng.brp.nl/schemas/brp.waardetabel.schema.json"
        },
        "inOnderzoek": {
            "$ref": "https://vng.brp.nl/schemas/brp.naamInOnderzoek.schema.json"
        }
    }
}